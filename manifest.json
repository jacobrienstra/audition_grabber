{
  "manifest_version": 2,
  "name": "BW Audition Grabber",
  "version": "0.1",
  "options_page": "html/options.html",
  "permissions": ["declarativeContent", "activeTab", "downloads", "storage"],

  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "Grabber for Broadway World Audition Listings"
  },

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  }
}
