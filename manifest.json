{
  "manifest_version": 2,
  "name": "BroadwayWorld Audition Grabber",
  "version": "0.4",
  "options_page": "html/options.html",
  "permissions": ["declarativeContent", "activeTab", "downloads", "storage"],

  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "Grabber for Broadway World Audition Listings"
  },

  "content_scripts": [
    {
      "matches": ["https://www.broadwayworld.com/*equity-audition*"],
      "css": ["css/toast.css"],
      "js": [
        "scripts/lib/ics.deps.min.js",
        "scripts/lib/moment.js",
        "scripts/lib/moment-timezone-with-data-10-year-range.js",
        "scripts/global.js"
      ]
    }
  ],

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  }
}
